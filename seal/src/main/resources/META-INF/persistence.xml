<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="mongo_pu">
		<provider>com.impetus.kundera.KunderaPersistence</provider>
	</persistence-unit>
	
	<persistence-unit name="mysql_pu" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	</persistence-unit>
	
	<persistence-unit name="mongo_pu_test">
		<provider>com.impetus.kundera.KunderaPersistence</provider>
		<properties>
			<property name="kundera.nodes" value="localhost" />
			<property name="kundera.port" value="27017" />
			<property name="kundera.keyspace" value="sealDB" />
			<property name="kundera.dialect" value="mongodb" />
			<property name="kundera.ddl.auto.prepare" value="create-drop" />
			<property name="kundera.client.lookup.class" value="com.impetus.client.mongodb.MongoDBClientFactory" />
		</properties>
	</persistence-unit>

	<persistence-unit name="mysql_pu_test" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<properties>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/sealjpatestdb" />
			<property name="hibernate.connection.username" value="sealjpatestdb" />
			<property name="hibernate.connection.password" value="sealjpatestdb" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.max_fetch_depth" value="3" />
		</properties>
	</persistence-unit>

	<persistence-unit name="hsql_pu_test" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
			<property name="hibernate.connection.url" value="jdbc:hsqldb:mem:jpaTestDb" />
			<property name="hibernate.connection.username" value="" />
			<property name="hibernate.connection.password" value="" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
		</properties>
	</persistence-unit>
	
</persistence>